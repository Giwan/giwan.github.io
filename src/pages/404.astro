---
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import PageLayout from "../layouts/PageLayout.astro";
---

<PageLayout content={{ title: SITE_TITLE, description: SITE_DESCRIPTION }}>
    <h1 class="text-8xl font-bold text-center my-12">404</h1>
    <p class="mt-8 pt-4 text-3xl font-sans max-w-[400px] mx-auto">
        Somewhere something went wrong. The page you are looking for does not seem to exist (anymore). 
        <br />
        <br />
        Please try another one of our pages from <a href="/" class="underline">Home</a>
    </p>
</PageLayout>
