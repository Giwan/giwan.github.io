---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../config";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>

    <body class="p-4">
        <Header />
        <main class="min-h-[calc(100vh-14rem)] flex justify-center items-center">
            <div class="text-center">
                <h1 class="text-2xl mb-4 font-heading">Search Results</h1>
                <div class="flex items-center gap-4">
                    <input 
                        type="search" 
                        class="h-24 bg-muted min-w-[300px] rounded-sm p-4 text-lg border border-input focus:ring-2 focus:ring-ring"
                        placeholder="Search articles..."
                    />
                    <button class="bg-primary text-primary-foreground w-36 h-16 rounded-sm font-heading hover:bg-primary/90 transition-colors">
                        Search
                    </button>
                </div>
            </div>
        </main>
        <Footer />
    </body>
</html>
