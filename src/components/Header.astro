---
import HeaderNav from "./HeaderNav/HeaderNav.astro";
import Logo from "./Header/HeaderLogo";
import { ThemeToggle } from "./ThemeToggle";
import { formatDateWithOptions } from "../utils/helpers.ts";
import { SITE_DESCRIPTION, SITE_DATE, PUBLICATION_INFO } from "../config";
const currentDate = formatDateWithOptions(new Date().toString());
---

<header id="header" class="block w-full" role="banner" transition:name="header">
    <div class="grid grid-cols-2 gap-4">
        <div class="col-span-1" transition:name="header-logo">
            <Logo />
        </div>
        <div class="col-span-1 flex justify-end items-center gap-4 sm:gap-2" transition:name="header-controls">
            <ThemeToggle client:load />
            <HeaderNav />
        </div>
        <div class="col-span-2 w-full flex flex-col sm:flex-row sm:justify-between items-center sm:items-baseline border-t border-border py-2 sm:py-1 gap-1 sm:gap-0 font-sans font-bold text-sm text-muted-foreground" transition:name="header-meta">
            <p transition:name="header-date">
                {currentDate}
            </p>
            <p transition:name="header-issue">
                {SITE_DATE} â€¢ ISSUE {PUBLICATION_INFO.currentIssue}
            </p>
        </div>
    </div>
</header>
