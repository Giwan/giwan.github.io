---
import Logo from "./Header/HeaderLogo";
const today = new Date();
---

<footer id="footer" class="mt-12 border-t pt-8 pb-12" role="contentinfo" transition:name="footer">
  <div class="w-full text-foreground/80">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <div class="text-left" transition:name="footer-brand">
        <Logo />
        <p class="mb-4 text-sm">Exploring code and technology - delivered with clarity and insight.</p>
        <p class="text-xs">&copy; {today.getFullYear()} G1. All rights reserved.</p>
      </div>
      
      <div class="text-left" transition:name="footer-categories">
        <h2 class="text-lg text-foreground font-bold mb-4 uppercase tracking-wider">Categories</h2>
        <ul class="space-y-2">
          <li><a href="/" class="link-hover">Articles</a></li>
          <li><a href="/tools" class="link-hover">Tools</a></li>
          <li><a href="/search" class="link-hover">Search</a></li>
          <li><a href="/about" class="link-hover">About</a></li>
        </ul>
      </div>
      
      <div class="text-left" transition:name="footer-connect">
        <h2 class="text-lg text-foreground font-bold mb-4 uppercase tracking-wider">Connect</h2>
        <ul class="space-y-2">
          <li><a href="/contact" class="link-hover">Contact</a></li>
          <li><a href="/rss.xml" class="link-hover">RSS Feed</a></li>
          <li><a href="https://github.com/giwan" class="link-hover" rel="noopener noreferrer" target="_blank">GitHub</a></li>
        </ul>
      </div>
    </div>
  </div>
</footer>