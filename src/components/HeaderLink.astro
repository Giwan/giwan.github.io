---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href = "", class: className, ...props } = Astro.props;

const path =
    Astro.url.pathname.length > 1
        ? Astro.url.pathname.replace(/\/$/, "")
        : Astro.url.pathname;

const isActive = href === path || (path.indexOf(href) > -1 && href !== "/");
---

<a
    href={href}
    class:list={[className, { active: isActive }]}
    {...props}
>
    <slot />
</a>
<style>
    a {
        display: inline-block;
        text-decoration: none;
        font-size: 0.95rem;
        font-weight: 500;
        padding: 0.25rem 0.75rem;
        border-radius: 0.25rem;
        transition: all 0.2s ease;
    }

    a:hover:not(.active) {
        background-color: rgba(174, 129, 255, 0.2); /* Monokai purple with opacity */
    }
    
    a.active {
        background-color: rgba(166, 226, 46, 0.2); /* Monokai green with opacity */
        font-weight: 600;
    }
</style>