---
import type { MarkdownLayoutProps } from 'astro';
import PageLayout from './PageLayout.astro';

type Props = MarkdownLayoutProps<{
  title: string;
  description: string;
  pubDate: string;
  updatedDate?: string;
  author?: string;
  authorTitle?: string;
  heroImage?: string;
  categories?: string[];
  tags?: string[];
}>;

const { 
  content: { 
    title, 
    description, 
    pubDate, 
    updatedDate, 
    author = "Editorial Team", 
    authorTitle = "Staff Writer",
    heroImage, 
    categories = [],
    tags = []
  } 
} = Astro.props;

// Format the publish date in newspaper style
const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Format the updated date if it exists
const formattedUpdatedDate = updatedDate 
  ? new Date(updatedDate).toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    })
  : null;
---

<PageLayout content={{ title, description, pubDate, heroImage }}>
  <div class="max-w-3xl mx-auto">
    <!-- Article Header -->
    <header class="mb-8 border-b-3 border-monokai-purple pb-6">
      <!-- Categories -->
      {categories.length > 0 && (
        <div class="mb-3">
          {categories.map((category) => (
            <a href={`/category/${category.toLowerCase()}`} class="text-xs font-sans uppercase tracking-wider text-monokai-blue hover:underline mr-3">
              {category}
            </a>
          ))}
        </div>
      )}
      
      <!-- Title -->
      <h1 class="article-headline mb-4">
        {title}
      </h1>
      
      <!-- Description/Subheading -->
      <p class="font-serif text-xl text-body italic mb-6">
        {description}
      </p>
      
      <!-- Metadata Row -->
      <div class="flex flex-wrap items-center justify-between text-sm">
        <div class="flex items-center mr-6 mb-2">
          <div class="w-8 h-8 bg-monokai-purple text-monokai-foreground rounded-full flex items-center justify-center mr-3">
            <span class="font-heading">{author.charAt(0)}</span>
          </div>
          <div>
            <p class="font-medium text-monokai-foreground">{author}</p>
            <p class="text-monokai-comment text-xs">{authorTitle}</p>
          </div>
        </div>
        
        <div class="flex flex-wrap items-center text-monokai-comment">
          <span class="mr-3 font-serif italic">{formattedDate}</span>
          {formattedUpdatedDate && (
            <span class="font-serif text-xs">
              (Updated: {formattedUpdatedDate})
            </span>
          )}
        </div>
      </div>
    </header>
    
    <!-- Hero Image -->
    {heroImage && (
      <figure class="mb-8 newspaper-fold shadow-paper">
        <img 
          src={heroImage} 
          alt={`Image for ${title}`} 
          class="w-full h-auto"
        />
        <figcaption class="bg-monokai-background-dark p-2 text-sm text-monokai-comment font-serif italic text-center">
          {title} - Photo courtesy of Tech Times
        </figcaption>
      </figure>
    )}
    
    <!-- Article Content -->
    <div class="article-content">
      <slot />
    </div>
    
    <!-- Article Footer -->
    <footer class="mt-12 pt-6 border-t border-monokai-comment">
      <!-- Tags -->
      {tags.length > 0 && (
        <div class="mb-6">
          <h3 class="text-sm font-sans uppercase tracking-wider text-monokai-comment mb-3">Related Topics</h3>
          <div class="flex flex-wrap">
            {tags.map((tag) => (
              <a href={`/tag/${tag.toLowerCase()}`} class="article-tag">
                #{tag}
              </a>
            ))}
          </div>
        </div>
      )}
      
      <!-- Share and Related Articles -->
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center">
        <div class="mb-4 sm:mb-0">
          <h3 class="text-sm font-sans uppercase tracking-wider text-monokai-comment mb-2">Share this article</h3>
          <div class="flex space-x-3">
            <a href="#" class="text-monokai-comment hover:text-monokai-blue transition-colors">
              <span class="sr-only">Twitter</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
              </svg>
            </a>
            <a href="#" class="text-monokai-comment hover:text-monokai-blue transition-colors">
              <span class="sr-only">LinkedIn</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
            <a href="#" class="text-monokai-comment hover:text-monokai-blue transition-colors">
              <span class="sr-only">Email</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </a>
          </div>
        </div>
        
        <a href="/articles" class="inline-flex items-center font-heading text-monokai-foreground hover:text-monokai-green transition-colors">
          <span>More articles</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>
    </footer>
  </div>
</PageLayout>

<style is:global>
  /* Target the article content to style markdown-rendered content */
  .article-content {
    font-family: 'Merriweather', Georgia, serif;
    line-height: 1.8;
    color: #f8f8f2; /* Monokai foreground */
  }
  
  /* First paragraph styling with drop cap */
  .article-content > p:first-of-type {
    font-size: 1.125rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }
  
  .article-content > p:first-of-type:first-letter {
    font-family: 'Inter', Georgia, serif;
    float: left;
    font-size: 4rem;
    line-height: 0.8;
    padding-right: 0.5rem;
    color: #ae81ff; /* Monokai purple */
  }
  
  /* Headings */
  .article-content h2 {
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    font-size: 1.75rem;
    line-height: 1.3;
    color: #a6e22e; /* Monokai green */
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    border-bottom: 1px solid #3e3d32; /* Monokai highlight */
    padding-bottom: 0.5rem;
  }
  
  .article-content h3 {
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    font-size: 1.4rem;
    line-height: 1.3;
    color: #66d9ef; /* Monokai blue */
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  /* Lists */
  .article-content ul, .article-content ol {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }
  
  .article-content li {
    margin-bottom: 0.5rem;
  }
  
  /* Code */
  .article-content code {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.95em;
    background-color: #1e1f1c; /* Monokai darker */
    padding: 0.2em 0.4em;
    border-radius: 3px;
    color: #fd971f; /* Monokai orange */
  }
  
  .article-content pre {
    background-color: #1e1f1c; /* Monokai darker */
    color: #f8f8f2; /* Monokai foreground */
    padding: 1rem;
    border-radius: 0.25rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    border-left: 3px solid #fd971f; /* Monokai orange */
  }
  
  .article-content pre code {
    background-color: transparent;
    color: inherit;
    padding: 0;
    font-size: 0.9rem;
  }
  
  /* Blockquotes */
  .article-content blockquote {
    font-family: 'Inter', Georgia, serif;
    font-style: italic;
    font-size: 1.25rem;
    line-height: 1.6;
    color: #a6a6a6; /* Monokai secondary */
    border-left: 3px solid #fd971f; /* Monokai orange */
    padding-left: 1rem;
    margin: 2rem 0;
  }
  
  /* Links */
  .article-content a {
    color: #66d9ef; /* Monokai blue */
    text-decoration: none;
    border-bottom: 1px solid #66d9ef; /* Monokai blue */
    transition: border-color 0.2s, color 0.2s;
  }
  
  .article-content a:hover {
    color: #a6e22e; /* Monokai green */
    border-bottom-color: #a6e22e; /* Monokai green */
  }
  
  /* Images */
  .article-content img {
    max-width: 100%;
    height: auto;
    margin: 2rem 0;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2);
  }
  
  /* Tables */
  .article-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    font-family: 'Inter', system-ui, sans-serif;
  }
  
  .article-content th {
    background-color: #3e3d32; /* Monokai highlight */
    color: #66d9ef; /* Monokai blue */
    font-weight: 600;
    text-align: left;
    padding: 0.75rem;
    border-bottom: 2px solid #75715e; /* Monokai comment */
  }
  
  .article-content td {
    padding: 0.75rem;
    border-bottom: 1px solid #3e3d32; /* Monokai highlight */
  }
  
  .article-content tr:nth-child(even) {
    background-color: #1e1f1c; /* Monokai darker */
  }
  
  /* Horizontal rule */
  .article-content hr {
    border: 0;
    height: 1px;
    background-color: #3e3d32; /* Monokai highlight */
    margin: 2rem 0;
  }
</style>